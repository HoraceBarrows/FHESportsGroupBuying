{
  "name": "anonymous-sports-group-buying",
  "version": "1.0.0",
  "description": "Privacy-preserving sports equipment group purchasing platform powered by FHE technology",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:sepolia": "hardhat test --network sepolia",
    "coverage": "hardhat coverage",
    "deploy": "hardhat run scripts/deploy.js --network sepolia",
    "verify": "hardhat run scripts/verify.js --network sepolia",
    "interact": "hardhat run scripts/interact.js --network sepolia",
    "simulate": "hardhat run scripts/simulate.js --network sepolia",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "lint": "eslint '**/*.js'",
    "lint:fix": "eslint '**/*.js' --fix",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:sol:fix": "solhint 'contracts/**/*.sol' --fix",
    "prettier": "prettier --write '**/*.{js,json,md,sol}'",
    "prettier:check": "prettier --check '**/*.{js,json,md,sol}'",
    "format": "npm run prettier && npm run lint:fix && npm run lint:sol:fix",
    "security:check": "npm audit --audit-level=moderate && npm run lint:sol",
    "security:fix": "npm audit fix",
    "gas:report": "REPORT_GAS=true npm test",
    "analyze": "npm run security:check && npm run gas:report",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "validate": "npm run lint && npm run lint:sol && npm test"
  },
  "keywords": [
    "fhe",
    "privacy",
    "group-buying",
    "sports",
    "ethereum",
    "zama",
    "fhevm"
  ],
  "author": "Anonymous Sports Group Buying Team",
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.sol": [
      "solhint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.0.0",
    "chai": "^4.5.0",
    "dotenv": "^16.4.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "ethers": "^6.11.0",
    "hardhat": "^2.22.0",
    "hardhat-gas-reporter": "^2.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "mocha": "^10.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.3.0",
    "solhint": "^4.0.0",
    "solidity-coverage": "^0.8.0"
  },
  "dependencies": {
    "@fhevm/solidity": "^0.5.0"
  }
}
