# =============================================================================
# Anonymous Sports Group Buying Platform - Environment Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# Network Configuration
# -----------------------------------------------------------------------------

# Sepolia Testnet RPC URL
# Get your Project ID from: https://infura.io/ or https://alchemy.com/
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Alternative RPC providers (uncomment to use)
# SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
# SEPOLIA_RPC_URL=https://rpc.sepolia.org

# Mainnet RPC URL (for production deployment)
# MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Local Network (Hardhat node)
# LOCAL_RPC_URL=http://127.0.0.1:8545

# -----------------------------------------------------------------------------
# Wallet Configuration
# -----------------------------------------------------------------------------

# Private Key for contract deployment and interactions
# SECURITY WARNING: NEVER commit your real private key!
# Get this from MetaMask: Account Details â†’ Export Private Key
PRIVATE_KEY=your_private_key_here_0x...

# Alternative: Use mnemonic phrase (12-24 words)
# MNEMONIC=your twelve word mnemonic phrase goes here for deployment

# Deployer Address (informational, auto-derived from PRIVATE_KEY)
# DEPLOYER_ADDRESS=

# -----------------------------------------------------------------------------
# API Keys & Services
# -----------------------------------------------------------------------------

# Etherscan API Key for contract verification
# Get from: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Codecov Token for coverage reporting
# Get from: https://codecov.io/
CODECOV_TOKEN=your_codecov_token_here

# CoinMarketCap API Key (for gas reporter USD pricing)
# Get from: https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# -----------------------------------------------------------------------------
# Contract Deployment
# -----------------------------------------------------------------------------

# Deployed Contract Address (filled after deployment)
CONTRACT_ADDRESS=

# Contract Owner Address (if different from deployer)
OWNER_ADDRESS=

# Pauser Role Address (for emergency pause functionality)
PAUSER_ADDRESS=

# Admin Role Address (for admin functions)
ADMIN_ADDRESS=

# -----------------------------------------------------------------------------
# Gas Configuration
# -----------------------------------------------------------------------------

# Gas Price (in gwei) - leave empty for auto
# GAS_PRICE=50

# Gas Limit for deployment
# GAS_LIMIT=8000000

# Max Fee Per Gas (EIP-1559)
# MAX_FEE_PER_GAS=100

# Max Priority Fee Per Gas (EIP-1559)
# MAX_PRIORITY_FEE_PER_GAS=2

# -----------------------------------------------------------------------------
# Performance & Optimization
# -----------------------------------------------------------------------------

# Enable gas reporting in tests
REPORT_GAS=false

# Optimizer runs (higher = more gas efficient, slower compilation)
# Default: 800 (balanced)
# High frequency: 1000000+
# Low frequency: 200
OPTIMIZER_RUNS=800

# Compiler version (must match contracts)
SOLIDITY_VERSION=0.8.24

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------

# Enable security checks in tests
ENABLE_SECURITY_CHECKS=true

# Audit level for npm audit (low, moderate, high, critical)
AUDIT_LEVEL=moderate

# Max allowed vulnerabilities
MAX_VULNERABILITIES=0

# Enable reentrancy guards
ENABLE_REENTRANCY_GUARD=true

# -----------------------------------------------------------------------------
# Testing Configuration
# -----------------------------------------------------------------------------

# Test network (hardhat, sepolia, mainnet-fork)
TEST_NETWORK=hardhat

# Enable coverage reporting
ENABLE_COVERAGE=true

# Test timeout (milliseconds)
TEST_TIMEOUT=200000

# Parallel test execution
PARALLEL_TESTS=false

# -----------------------------------------------------------------------------
# CI/CD Configuration
# -----------------------------------------------------------------------------

# CI Environment (true in GitHub Actions)
CI=false

# Skip tests in CI (for faster builds)
SKIP_TESTS=false

# Skip coverage in CI
SKIP_COVERAGE=false

# Enable verbose logging
VERBOSE=false

# -----------------------------------------------------------------------------
# Frontend Configuration (if applicable)
# -----------------------------------------------------------------------------

# Frontend URL
FRONTEND_URL=https://anonymous-sports-group-buying.vercel.app/

# API Endpoint
API_ENDPOINT=

# WebSocket Endpoint
WS_ENDPOINT=

# -----------------------------------------------------------------------------
# Monitoring & Analytics
# -----------------------------------------------------------------------------

# Enable transaction monitoring
ENABLE_MONITORING=false

# Sentry DSN for error tracking
# SENTRY_DSN=

# Analytics tracking ID
# ANALYTICS_ID=

# -----------------------------------------------------------------------------
# Development Settings
# -----------------------------------------------------------------------------

# Development mode
NODE_ENV=development

# Debug mode
DEBUG=false

# Log level (error, warn, info, debug, trace)
LOG_LEVEL=info

# Enable source maps
ENABLE_SOURCE_MAPS=true

# -----------------------------------------------------------------------------
# Database Configuration (if using backend)
# -----------------------------------------------------------------------------

# Database URL
# DATABASE_URL=

# Redis URL (for caching)
# REDIS_URL=

# -----------------------------------------------------------------------------
# Email & Notifications (if applicable)
# -----------------------------------------------------------------------------

# SMTP Configuration
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASS=

# Notification webhook
# NOTIFICATION_WEBHOOK=

# -----------------------------------------------------------------------------
# Rate Limiting & Security
# -----------------------------------------------------------------------------

# Rate limit (requests per minute)
RATE_LIMIT=100

# Max requests per day
MAX_REQUESTS_PER_DAY=10000

# Enable CORS
ENABLE_CORS=true

# Allowed origins (comma-separated)
# ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# -----------------------------------------------------------------------------
# Backup & Recovery
# -----------------------------------------------------------------------------

# Backup private key (encrypted)
# BACKUP_KEY=

# Recovery phrase (encrypted)
# RECOVERY_PHRASE=

# Backup frequency (hours)
# BACKUP_FREQUENCY=24

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------

# Enable FHE encryption
ENABLE_FHE=true

# Enable group buying
ENABLE_GROUP_BUYING=true

# Enable order reveal
ENABLE_ORDER_REVEAL=true

# Enable emergency pause
ENABLE_EMERGENCY_PAUSE=true

# Enable withdrawal
ENABLE_WITHDRAWAL=true

# -----------------------------------------------------------------------------
# Notes
# -----------------------------------------------------------------------------

# 1. Copy this file to .env and fill in your actual values
# 2. Never commit .env file to version control
# 3. Keep your private keys secure
# 4. Use different keys for development and production
# 5. Regularly rotate API keys
# 6. Enable 2FA on all services
# 7. Use hardware wallet for mainnet deployments
# 8. Always test on testnet first
# 9. Document any custom variables you add
# 10. Review security settings before mainnet deployment
